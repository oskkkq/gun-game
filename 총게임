let remainingTime = 60; // 60ì´ˆ
let timerInterval = null;

function startTimer() {
  timerInterval = setInterval(() => {
    remainingTime--;
    updateTimerUI(remainingTime);

    if (remainingTime <= 0) {
      clearInterval(timerInterval);
      endGame("time"); // ì¢…ë£Œ íŠ¸ë¦¬ê±°
    }
  }, 1000);
}
