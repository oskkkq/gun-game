function reloadGun() {
  if (isReloading || currentAmmo === guns[selectedGun].ammo) return;

  isReloading = true;
  showReloadUI(); // ğŸ’¡ "Reloading..." í‘œì‹œ
  setTimeout(() => {
    currentAmmo = guns[selectedGun].ammo;
    isReloading = false;
    updateAmmoUI();
    hideReloadUI();
  }, guns[selectedGun].reloadTime);
}
