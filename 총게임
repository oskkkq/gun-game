  return {
    pistol: "ê¶Œì´",
    rifle: "ì†Œì´",
    shotgun: "ìƒ·ê±´",
    sniper: "ì €ê²©ì´",
    machinegun: "ë¨¸ì‹ ê±´"
  }[gun];
}
