let isOverheated = false;

function autoFireMachineGun() {
  if (isOverheated) return;

  fireBullet(...);
  showGunEffects();
  overheat += 5;            // ë°œì‚¬ë§ˆë‹¤ ê²Œì´ì§€ ì¦ê°€
  updateOverheatBar();

  if (overheat >= 100) {
    triggerOverheat();
  }
}
function triggerOverheat() {
  isOverheated = true;
  overheat = 100;
  playSound("/sounds/overheat.mp3");
  showOverheatWarning();
  showOverheatFlames();   // ğŸ”¥ ì—¬ê¸°ì„œ ë¶ˆë‚¨
  shakeGun();

  setTimeout(() => {
    isOverheated = false;
    overheat = 0;
    updateOverheatBar();
    hideOverheatWarning();
    hideOverheatFlames();
    playSound("/sounds/cooldown.mp3");
  }, 4000); // 4ì´ˆ ë™ì•ˆ ì‚¬ìš©ë¶ˆê°€
}
